<Screen1>:
    name:'screen1'

    BoxLayout:
        orientation: 'vertical'
        MDToolbar:
            title: 'CheckLists'
            left_action_items: [["menu", lambda x: nav_drawer.toggle_nav_drawer()]]
            elevation:5

        Widget:

    MDList:
        id: checklists

    MDNavigationDrawer:
        id: nav_drawer

        ContentNavigationDrawer:
            orientation: 'vertical'
            padding: "8dp"
            spacing: "8dp"

            Image:
                id: avatar
                size_hint: (1,1)
                source: "mine.jpg"

            MDLabel:
                text: app.nome_perfil
                font_style: "Subtitle1"
                size_hint_y: None
                height: self.texture_size[1]

            MDLabel:
                text: app.email_perfil
                size_hint_y: None
                font_style: "Caption"
                height: self.texture_size[1]

            ScrollView:

                DrawerList:
                    id: md_list
                    
                    MDList:
                        OneLineIconListItem:
                            text: "CheckLists"
                            on_release: root.manager.current = 'screen1'
                        
                            IconLeftWidget:
                                icon: "inbox"
                        
                                
                        OneLineIconListItem:
                            text: "Minhas CheckList"
                            on_release: root.manager.current = 'screen2'
                        
                            IconLeftWidget:
                                icon: "inbox"

                            
                        OneLineIconListItem:
                            text: "Nova CheckList"
                            
                        
                            IconLeftWidget:
                                icon: "inbox-arrow-up"
                                
                        
                        OneLineIconListItem:
                            text: "Meu Perfil"
                        
                            IconLeftWidget:
                                icon: "account"
    
    
